{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es5",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": "src",
    "paths": {
      "library/*": ["*"]
    },
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
