{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es5",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "baseUrl": ".",
    "removeComments": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
